{
  "manifest_version": 3,
  "name": "Send to Ollama",
  "version": "0.1.0",
  "description": "Send selected text and page metadata to a local Ollama model from the context menu.",
  "permissions": [
    "contextMenus",
    "notifications",
    "activeTab",
    "scripting",
    "downloads"
  ],
  "host_permissions": ["http://localhost:11434/*"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
